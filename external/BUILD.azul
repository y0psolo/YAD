filegroup(
    name = "lib_dir",
    srcs = glob(
        [
            "conf/**",
            "legal/**",
            "lib/**",
            "release",
        ],
        exclude  = [
            "lib/jexec",
            "lib/jspawnhelper",
            "lib/fontconfig.*",
        ],
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "bin_dir",
    srcs = glob([
        "bin/*",
        "lib/jexec",
        "lib/jspawnhelper",
    ]),
    visibility = ["//visibility:public"],
)